<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <title>Hello</title>
    <link rel='stylesheet' href='/stylesheets/main.css'/>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.0/angular-ui-router.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/1.3.3/ui-bootstrap.min.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/usercontroller.js"></script>
  </head>

  <body ng-controller="UserController as ctrl">

    <h1>Hello</h1>

    <form id="loginForm" ng-submit="ctrl.submitIt()">
      <label for="email">Email</label>
      <input type="text" name="email" id="email" ng-model="ctrl.email">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" ng-model="ctrl.password">
      <input type="submit" value="Sign In">
    </form>


<p> Add User below </p>

    <form id="newUser">
      <label for="email">Email</label>
      <input type="text" name="email" id="new-email">
      <label for="name">Name</label>
      <input type="text" name="name" id="new-name">
      <label for="dob">DOB</label>
      <input type="text" name="dob" id="new-dob">
      <input type="submit" value="Add User">
    </form>


    <button id="access">Access Resource</button>



  </body>
</html>
